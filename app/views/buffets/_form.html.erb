  </div>
  <div class="mb-3">
    <h3 class="form-label">MÃ©todos de Pagamento</h3>
    <%= f.collection_check_boxes :payment_method_ids, PaymentMethod.all, :id, :name, { multiple: true } do |b| %>
      <div class="form-check">
        <%= b.check_box class: 'form-check-input' %>
        <%= b.label class: 'form-check-label' %>
      </div>
    <% end %>
