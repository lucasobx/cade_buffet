<% if @buffet.errors.any? %>
  <div class="alert alert-danger">
    <p>Verifique os erros abaixo:</p>
    <ul>
      <% @buffet.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @buffet, class: 'mt-4' do |f| %>
  <div class="mb-3">
    <%= f.label :brand_name, class: 'form-label' %>
    <%= f.text_field :brand_name, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= f.label :corporate_name, class: 'form-label' %>
    <%= f.text_field :corporate_name, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= f.label :registration_code, class: 'form-label' %>
    <%= f.text_field :registration_code, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= f.label :phone_number, class: 'form-label' %>
    <%= f.text_field :phone_number, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= f.label :email, class: 'form-label' %>
    <%= f.text_field :email, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= f.label :address, class: 'form-label' %>
    <%= f.text_field :address, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= f.label :neighborhood, class: 'form-label' %>
    <%= f.text_field :neighborhood, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= f.label :city, class: 'form-label' %>
    <%= f.text_field :city, class: 'form-control' %>
  </div>
  <div class="mb-3">
