<div class="container mt-5">
  <h1 class="text-center">Resultados da Busca por: <%= @name %></h1>

  <p class="text-center"><%= @buffets.count %> <%= Buffet.model_name.human(count: @buffets.count).downcase %> <%= t(:found, count: @buffets.count) %></p>
  
  <div class="row justify-content-center" id="buffets">
    <% @buffets.each do |buffet| %>
      <div class="col-md-8 mb-4">
        <div class="card bg-dark text-light">
          <div class="card-body">
            <%= link_to "#{buffet.brand_name} - #{buffet.city}, #{buffet.state}", buffet_path(buffet), class: 'text-decoration-none text-light' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="text-center mt-4">
    <%= link_to 'Voltar', root_path, class: 'btn btn-secondary' %>
  </div>
</div>