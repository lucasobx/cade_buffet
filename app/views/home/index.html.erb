<section>
  <h2 class="text-center">Buffets</h2>
  <div class="container-fluid pt-5">
    <div class="row row-cols-1 row-cols-md-4 g-4">
      <% @buffets.each do |buffet| %>
        <div class="col">
          <div class="card card-custom text-light h-100">
            <div class="card-body">
              <h5 class="card-title">
                <%= link_to buffet.brand_name, buffet, class: "text-decoration-none text-light" %>
              </h5>
              <p class="card-text"><%= buffet.city %>, <%= buffet.state %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    
    <% if @buffets.empty? %>
      <p class="text-center text-muted">NÃ£o existem buffets cadastrados.</p>
    <% end %>
  </div>
</section>
